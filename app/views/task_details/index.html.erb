<h1><%= @task.description %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @task.task_details.each do |task_detail| %>
      <tr>
        <td><%= display_description(task_detail)%></td>
        <td><%= render 'completion_form', task_detail: task_detail %></td>
        <td><%= link_to 'Destroy', task_detail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger float-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<h3>Add Task Detail</h3>

<%= render 'form', task: @task, task_detail: @task_detail %>

<%= link_to "Back", tasks_path %>
