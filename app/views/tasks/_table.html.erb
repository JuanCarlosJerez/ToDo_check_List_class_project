<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td>
          <span class="due_date <%= badge_class_for(task) %>">
            <%= task.due_date&.strftime("%m/%d/%Y") %>
          </span>
        </td>
        <td><%= render 'completion_form', task: task %></td>
        <td><%= link_to "Details", task_task_details_path(task), class: "btn btn-secondary float-right" %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger float-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
